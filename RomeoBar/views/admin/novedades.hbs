<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col">
            <p class="text-center tituloFont" style="margin-bottom: 50px; font-size: x-large;">
                ¡Hola {{usuario}}!              
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2 class="FontSub" style="text-align: left;"> ¡Novedades!</h2>
        </div>

        <div class="col-5 text-center">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
             <a href="/admin/login/logout" class="btn  btn-danger">Cerrar sesión
                    <i class="fas fa-sign-out" aria-hidden="true"></i></a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>                     
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary" style="background-color: #527a5c;"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary" style="background-color: #527a5c;"><i class="fas fa-trash"></i></a>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>